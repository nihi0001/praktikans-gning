  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }

  article{
    margin-top: 3rem;
    gap: 4rem;

  }
  img {
    width: 300px; 
    height: 100%;
    border-radius: 1.5rem;

  }

  .tekst{
    max-width: 48ch;
  }

  /*.topp{
    font-weight: 600;
    color: #ef4444;
  }*/

